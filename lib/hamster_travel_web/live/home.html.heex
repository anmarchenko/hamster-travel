<%= if @current_user do %>
  <.container wide>
    <.subheader>
      {gettext("Next travels")}
    </.subheader>
    <.trips_grid trips={@streams.next_plans} />
    <.subheader>
      {gettext("Last travels")}
    </.subheader>
    <.trips_grid trips={@streams.last_trips} />
  </.container>
<% else %>
  <.container>
    <.header class="my-6">Welcome to hamster travel!</.header>
    <p>
      Please
      <.ht_link href={~p"/users/log_in"}>login.</.ht_link>
    </p>
  </.container>
<% end %>
